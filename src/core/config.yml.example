##########################
# Gestures               #
##########################
gestures:
  - id: "wave:lpeace"
    name: "Left Peace"
    type: "STILL"
    power: 0
    events:
      - light_on
      - door_open
    components:
      - LMIDDLE
      - LINDEX
  - id: "wave:rthumb_up"
    name: "Right thumb up"
    type: "STILL"
    power: 10
    events:
      - music_off
      - close_windows
    components:
      - RTHUMB
